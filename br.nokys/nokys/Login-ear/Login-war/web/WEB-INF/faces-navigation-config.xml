<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <navigation-rule>
        <from-view-id>/Autenticacao.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>recuperar</from-outcome>
            <to-view-id>/RecuperarSenha.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/homeFake.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>desbloquarSenha</from-outcome>
            <to-view-id>/DesbloquearSenha.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cadastrarSenha</from-outcome>
            <to-view-id>/CadastrarSenha.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>autenticacao</from-outcome>
            <to-view-id>/Autenticacao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/CadastrarSenha.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmacao</from-outcome>
            <to-view-id>/CadastrarSenhaConfirmacao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/CadastrarSenhaConfirmacao.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>conclusao</from-outcome>
            <to-view-id>/CadastrarSenhaConclusao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/DesbloquearSenha.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmacao</from-outcome>
            <to-view-id>/DesbloquearSenhaConfirmacao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/DesbloquearSenhaConfirmacao.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>conclusao</from-outcome>
            <to-view-id>/DesbloquearSenhaConclusao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/AlterarSenha.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmacao</from-outcome>
            <to-view-id>/AlterarSenhaConfirmacao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/AlterarSenhaConfirmacao.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>conclusao</from-outcome>
            <to-view-id>/AlterarSenhaConclusacao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/homeFake.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>alterarSenha</from-outcome>
            <to-view-id>/AlterarSenha.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/RecuperarSenhaConfirmacao.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>conclusao</from-outcome>
            <to-view-id>/RecuperarSenhaConclusao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/RecuperarSenha.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmacao</from-outcome>
            <to-view-id>/RecuperarSenhaConfirmacao.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
