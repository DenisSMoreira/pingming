<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
    version="1.0">
    
    <persistence-unit name="controle_acesso" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!--         <jta-data-source>jdbc/VisaVale</jta-data-source> -->
        <jta-data-source>java:comp/env/jdbc/AppDataSource</jta-data-source>
		<!-- <mapping-file>META-INF/orm-controleacesso.xml</mapping-file> --> 
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle9Dialect"/>
            <property name="hibernate.show_sql" value="true"/>	
            <property name="hibernate.transaction.manager_lookup_class"
			 			 value="org.hibernate.transaction.WebSphereExtendedJTATransactionLookup"/>		
        </properties>
    </persistence-unit>
</persistence>