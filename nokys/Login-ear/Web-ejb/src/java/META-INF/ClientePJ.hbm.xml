<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cbss.bean.canonico.ClientePJ" table="TCLIPJ" >
        <id name="codEmpresa" type="java.lang.Long">
            <column name="CCLI" />
        </id>       
        <one-to-one name="cliente" class="cbss.bean.canonico.Cliente" constrained="true"  lazy="false" fetch="select"></one-to-one>
        
        <many-to-one name="tipoEmpresa" class="cbss.bean.canonico.TipoEmpresa" >
            <column name="CTPOEMPR"  />
        </many-to-one>
        
        <many-to-one name="divisaoRamoAtividade" class="cbss.bean.canonico.DivisaoRamoAtividade">
            <column name="CDIVISRAMOATVDD"/>
        </many-to-one>
        
        <many-to-one name="ramoAtividade" class="cbss.bean.canonico.RamoAtividade" >
            <column name="CRAMOATVDD" />
        </many-to-one>
        
        <property name="nroRaizCnpj" type="java.lang.Long">
            <column name="NRAIZCNPJ" />
        </property>
        
        <property name="nomeFantasia" type="java.lang.String">
            <column name="IFANTS" />
        </property>
        
        <property name="inscricaoPat" type="java.lang.Long">
            <column name="NINSCRPAT" />
        </property>
        
        <property name="inscricaoEstadual" type="java.lang.String">
            <column name="NINSCREST" />
        </property>
        
        <property name="inscricaoMunicipal" type="java.lang.String">
            <column name="NINSCRMUN" />
        </property>
    </class>
</hibernate-mapping>
