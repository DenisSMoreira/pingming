<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="cbss.bean.canonico.Cliente" table="TCLI" >
        <id name="codigo" type="java.lang.Long">
            <column name="CCLI" />
        </id>
        
        <many-to-one name="endereco" class="cbss.bean.canonico.Endereco">
            <column name="CENDER"  />
        </many-to-one>
        
        <many-to-one name="interlocutor" class="cbss.bean.canonico.Interlocutor" property-ref="cliente" insert="false" update="false">
            <column name="CCLI"  unique="true" />
        </many-to-one>
        
        <one-to-one name="clientePJ" class="cbss.bean.canonico.ClientePJ"  lazy="false" fetch="select"></one-to-one>
        <one-to-one name="clientePF" class="cbss.bean.canonico.ClientePF"  lazy="false" fetch="select"></one-to-one>
                
        <property name="nome" type="java.lang.String">
            <column name="ICLI"  />
        </property>
        <property name="telefonePrincipal" type="java.lang.Long">
            <column name="NFONEPRINC"  />
        </property>
        <property name="telefoneOpcional" type="java.lang.Long">
            <column name="NFONEOPCNL"  />
        </property>
        <property name="fax" type="java.lang.Long">
            <column name="NFAX"  />
        </property>
        <property name="tipoPessoa" type="java.lang.Character">
            <column name="CTPOPSSOA"   />
        </property>
        <property name="dddPrincipal" type="java.lang.Integer">
            <column name="NDDDPRINC"    />
        </property>
        <property name="ramalPrincipal" type="java.lang.Integer">
            <column name="NRMALPRINC"   />
        </property>
        <property name="ramalOpcional" type="java.lang.Integer">
            <column name="NRMALOPCNL"   />
        </property>
        <property name="ramalFax" type="java.lang.Integer">
            <column name="NRMALFAX"   />
        </property>
        <property name="email" type="java.lang.String">
            <column name="EEMAIL"  />
        </property>
        <property name="sincronizacao" type="java.lang.Boolean">
            <column name="FSINCR"    />
        </property>
        <property name="dataCriacao" type="java.sql.Date">
            <column name="DCRIAC" />
        </property>
        <property name="dataAtualizacao" type="java.sql.Date">
            <column name="DATULZ"  />
        </property>
        <property name="dataMigracao" type="java.sql.Date">
            <column name="DMGRAC"  />
        </property>
        <property name="dddOpcional" type="java.lang.Integer">
            <column name="NDDDOPCNL" />
        </property>
        <property name="dddFax" type="java.lang.Integer">
            <column name="NDDDFAX"  />
        </property>
        
    </class>
</hibernate-mapping>
